/* pages/my/my.wxss */
.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100%;
  color: #444;
  position: relative;
}
.my-container{
  width: 100%;
  height: 350rpx;
  background: #D5554C;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo image{
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.float-box{
  width: 80%;
  position: absolute;
  top: 300rpx;
  background: #fff;
  border-radius: 30rpx;
  overflow: hidden;
  font-size: 28rpx;
  box-shadow: 0 0 3px #c0c0c0;
}
.float-box .weui-grid,
.float-box .weui-grids{
  border: none;
}
.float-box .weui-grid{
  padding: 40rpx 20rpx;
}

.service{
  width: 100%;
  margin-top: 120rpx;
  background: #fff;
}
.service .weui-grids,
.service .weui-grid{
  border-color: #eee;
}

.weui-cell {
  padding: 14px 14px;
}
.weui-grid {
  padding: 20px 10px 10px;
}


.y-userInfo {
  padding: 60rpx 0 40rpx;
  width: 100%;
  height: 100%;
  display: flex;
}

.y-avatar {
  margin-left: 106rpx;
  width: 144rpx;
  height: 144rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
}

.y-user{
  position: relative;
  margin-left: 50rpx;
}

.y-userNick {
  font-weight: 600;
}

.y-fake-tip {
  position: absolute;
  top: 80rpx;
  left: 0;
  color: #e5e5e5;
  font-size: 30rpx;
  line-height: 1;
  border-bottom: 1rpx solid #e5e5e5;
}

.y-login{
  position: relative;
  opacity: 0;
  z-index: 2;
}

