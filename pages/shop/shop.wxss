/* shop/shop.wxss */
.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100%;
  color: #191c2c;
  position: relative;
}
/* 轮播 */
.swiper,
.swiper-image{
  width: 100%;
  height: 420rpx;
}
.search-container{
  width: 100%;
  height: 80rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
}
/* 搜索 */
.search{
  width: 80%;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  background: rgba(255, 255, 255, 0.5);
  margin: 20rpx auto;
  text-align: center;
  color: #FEC92E;
  font-size: 32rpx;
}
.search icon{
  position: relative;
  top: 14rpx;
}

/* 新闻 */
.news-container{
  width: 100%;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  padding: 16rpx 20rpx;
  background: #fff;
  margin-top: 20rpx;
}
.item {
  flex: 1;
}
.happy_tui{
  padding: 0 8px;
}
.happy_tui > swiper {
  height: 60rpx;
  line-height: 60rpx;
}
.show-text{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.tui_item{
  font-size: 12px;
  color: #000;
  vertical-align: middle;
}
.tui_text{
  border: 1px solid #ED2A22;
  border-radius: 12px;
  font-size: 20rpx;
  color: #ED2A22;
  padding: 0 3px;
  margin: 0 5px 0 0;
}
.more{
  padding: 0 0 0 8px;
  border-left: 1px solid #333;
  text-align:center;
  line-height:18px;
  margin:auto 0;
}
.more > text{
  font-size: 24rpx;
  color: #000;
}

/* 店铺信息 */
.shopIntro {
  width: 100%;
  color: #000;
  background: #fff;
  position: relative;
}
.weui-media-box__desc{
  padding-right: 40rpx;
  color: #666;
}
.weui-panel:before{
  display: none;
}
.weui-panel:after{
  border-color: rgba(255,255,255, .5);
}
.change{
  font-size: 32rpx;
  position: absolute;
  top: 40%;
  right: 20rpx;
  transform: translateY(-50%)
}

.goods-container{
  width: 100%;
  margin-top: 20rpx;
  background: linear-gradient(#fddac6,#f5f5f5);
}
.weui-cells__title text{
  background: rgba(255, 255, 255, .6);
  padding: 6rpx 26rpx;
  color: orangered;
  font-size: 30rpx;
  border-radius: 20rpx;
}
.goods-container{
  width: 100%;
  margin-top: 30rpx;
  box-sizing: border-box;
  padding: 10rpx 26rpx;
}
.goods-list{
  width: 100%;
  overflow: hidden;
  padding: 20rpx 0;
}
.goods{
  display: block;
  width: 48%;
  color: #333;
  font-size: 32rpx;
  position: relative;
  float: left;
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 20rpx;
}
.goods:nth-child(even){
  margin-left: 4%;
}
.goods > image{
  width: 100%;
  height: 300rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.goods .inner{
  padding: 10rpx 20rpx;
}
.goods .goods-name{
  height: 92rpx;
  line-height: 46rpx;
  overflow: hidden;
}
.goods .goods-price{
  width: 100%;
  display: flex;
  justify-content: space-between;
  color: orange;
}
.goods-price > view > text{
  color: #999;
  font-size: 26rpx;
}
/* 模板遮罩层 */
.y-mask {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: rgba(0,0,0,.5);
  display: flex;
  justify-content: center;
  align-items: center;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

/* modal对话层 */
.y-modal {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  border-radius: 10rpx;
}

/* 提示 */
.y-title{
  text-align: center;
  line-height: 106rpx;
  color: #888;
  font-weight: 600;
}

/* 内容 */
.y-tip {
  padding: 0 20rpx 20rpx;
  color: #666;
  text-align: center;
  font-size: 32rpx;
}

.y-inner {
  color: #09bb07;
}


/* 操作 */
.y-option{
  width: 100%;
  display: flex;
}

/* 取消 */
.y-cancel {
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  font-weight: 600;
  color: #555;
  background-color: #fff;
  flex: 1;
}

/* 成功 */
.y-confirm {
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  font-weight: 600;
  color: #d64340;
  flex: 1;
  background-color: #f5f5f5;
}