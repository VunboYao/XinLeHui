page {
  background-color: #fff;
}
.container {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 合计 */
.total {
  width: 60%;
  text-align: center;
  padding: 10rpx 20rpx;
  border: 1px solid #ddd;
  border-radius: 6rpx;
}

/* 选项 */
.option {
  padding: 30rpx;
  display: flex;
}
.option .income {
  margin-right: 30rpx;
}

/* 列表 */
.list {
  width: 100%;
}

.item {
  display: flex;
  justify-content: space-between;
  width: 100%;
  margin-bottom: 20rpx;
  border-bottom: 1px solid #ddd;
}

.item-left {
  display: inline-flex;
  flex-direction: column;
  width: 50%;
  height: 100rpx;
  justify-content: space-around;
}

.item-right {
  display: inline-flex;
  width: 30%;
  height: 100rpx;
  align-items: center;
}

/* add/down */
.item-right > .icon {
  margin-right: 10rpx;
  width: 40rpx;
  height: 40rpx;
}

/* 标题 */
.item-title {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 时间 */
.item-time {
  font-size: 24rpx;
  color: #999;
}

.item-right .details {
  font-size: 38rpx;
}

/* 模板遮罩层 */
.y-mask {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: rgba(0, 0, 0, .5);
  display: flex;
  justify-content: center;
  align-items: center;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

/* modal对话层 */
.y-modal {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  border-radius: 10rpx;
}

/* 提示 */
.y-title {
  text-align: center;
  line-height: 106rpx;
  color: #888;
  font-weight: 600;
}

/* 内容 */
.y-tip {
  padding: 0 20rpx 20rpx;
  color: #666;
  text-align: center;
  font-size: 32rpx;
}

.y-inner {
  color: #09bb07;
}


/* 操作 */
.y-option {
  width: 100%;
  display: flex;
}

/* 取消 */
.y-cancel {
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  font-weight: 600;
  color: #555;
  background-color: #fff;
  flex: 1;
}

/* 成功 */
.y-confirm {
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: 600;
  color: #d64340;
  flex: 1;
  background-color: #f5f5f5;
}
