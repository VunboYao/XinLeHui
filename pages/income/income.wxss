page {
  background-color: #fff;
}
.container {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 合计 */
.total {
  width: 60%;
  text-align: center;
  padding: 10rpx 20rpx;
  border: 1px solid #ddd;
  border-radius: 6rpx;
}

/* 选项 */
.option {
  padding: 30rpx;
  display: flex;
}
.option .income {
  margin-right: 30rpx;
}

/* 列表 */
.list {
  width: 100%;
}

.item {
  display: flex;
  justify-content: space-between;
  width: 100%;
  margin-bottom: 20rpx;
  border-bottom: 1px solid #ddd;
}

.item-left {
  display: inline-flex;
  flex-direction: column;
  width: 50%;
  height: 100rpx;
  justify-content: space-around;
}

.item-right {
  display: inline-flex;
  width: 30%;
  height: 100rpx;
  align-items: center;
}

/* add/down */
.item-right > .icon {
  margin-right: 10rpx;
  width: 40rpx;
  height: 40rpx;
}

/* 标题 */
.item-title {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 时间 */
.item-time {
  font-size: 24rpx;
  color: #999;
}

.item-right .details {
  font-size: 38rpx;
}
