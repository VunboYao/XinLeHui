/* pages/demo/demo.wxss */
/* components/goodItem/goodItem.wxss */

.container {
  padding-bottom: 160rpx;
}

.cart-item {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
}

/* 商品图片 */
.image-wrapper {
  position: relative;
  width: 230rpx;
  height: 230rpx;
}


.goods-avatar {
  width: 230rpx;
  height: 230rpx;
  border-radius: 10rpx;
}

/* 选择 */
.goods-select {
  position: absolute;
  top: -16rpx;
  left: -16rpx;
  text-align: center;
  border-radius: 50%;
  border: 4rpx solid #fff;
  background: #fff;
}

/* 商品信息 */
.goods-info {
  position: relative;
  width: 340rpx;
  margin: 0 20rpx;
}

.goods-title-h1 {
  display: block;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 32rpx;
}

.goods-title-h2 {
  display: block;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 28rpx;
  color: #888;
  line-height: 40rpx;
}

.goods-storage-tip {
  display: block;
  font-size: 24rpx;
  color: #e64340;
}

.goods-increment {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 300rpx;
  height: 70rpx;
  background: #f5f5f5;
  display: flex;
  justify-content: space-between;
}

.goods-increment_icon {
  width: 90rpx;
  height: 70rpx;
  font-size: 50rpx;
  text-align: center;
  line-height: 70rpx;
}

.goods-increment_icon_dis {
  width: 90rpx;
  height: 70rpx;
  font-size: 50rpx;
  text-align: center;
  line-height: 70rpx;
  color: #ccc;
}

.goods-number {
  width: 120rpx;
  height: 70rpx;
  text-align: center;
  background-color: #ddd;
}
/* 删除商品 */
.goods-delete {
  display: block;
  width: 52rpx;
  height: 52rpx;
  text-align: center;
}


/* 底部操作栏 */
.bottom-action {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  border-top: 1px solid #ddd;
  background-color: #fff;
  box-sizing: border-box;
}

/* 结算 */
.billing-pay {
  width: 240rpx;
  line-height: 100rpx;
  background: #09bb07;
  color: #fff;
  text-align: center;
}

/* 无结算 */
.billing-none {
  width: 240rpx;
  line-height: 100rpx;
  background: #CCCCCC;
  color: #fff;
  text-align: center;
}

/* 合计 */
.billing-detail {
  width: calc(100% - 240rpx);
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
}

/* 全选 */
.checkbox {
  width: 140rpx;
  height: 98rpx;
  display: flex;
  align-items: center;
}

.checkbox-toggleAll {
  margin-right: 20rpx;
}

/* 合计 */
.billing-text {
  display: flex;
  height: 98rpx;
  align-items: center;
}

.billing-num {
  margin-left: 20rpx;
  color: #FE6702;
}

.billing-num-none {
  margin-left: 20rpx;
  color: #ccc;
}

/* 无商品时提示 */
.no-goods {
  height: 88vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.car-none {
  width: 230rpx;
  height: 230rpx;
  margin-bottom: 100rpx;
}

.no-goods-tip {
  color: #BFBFBF;
}
