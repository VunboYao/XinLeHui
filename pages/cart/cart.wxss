.scroll-view {
  position: fixed;
  top: 0;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
  z-index: 99;
}

.tab-list {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.active {
  position: relative;
  color: #FA436A;
}

.active::after {
  position: absolute;
  content: '';
  bottom: 0;
  left: 0;
  width: 100%;
  height: 4rpx;
  background-color: #FA436A;
}

.container {
  padding-top: 100rpx;
  background-color: #eee;
}
